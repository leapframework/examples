<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.leapframework.org/schema/beans">
    <!-- default datasource, specify it is primary with primary="true" -->
    <bean name="default" type="javax.sql.DataSource" class="leap.db.cp.PooledDataSource" primary="true">
        <property name="driverClassName" value="${default.db.driverClassName}"></property>
        <property name="jdbcUrl" value="${default.db.url}"></property>
        <property name="username" value="${default.db.username}"></property>
        <property name="password" value="${default.db.password}"></property>
        <property name="maxWait" value="30000"></property>
        <property name="maxActive" value="50"></property>
    </bean>

    <bean name="datasource1" type="javax.sql.DataSource" class="leap.db.cp.PooledDataSource">
        <property name="driverClassName" value="${datasource1.db.driverClassName}"></property>
        <property name="jdbcUrl" value="${datasource1.db.url}"></property>
        <property name="username" value="${datasource1.db.username}"></property>
        <property name="password" value="${datasource1.db.password}"></property>
        <property name="maxWait" value="30000"></property>
        <property name="maxActive" value="50"></property>
    </bean>

    <bean name="datasource2" type="javax.sql.DataSource" class="leap.db.cp.PooledDataSource">
        <property name="driverClassName" value="${datasource2.db.driverClassName}"></property>
        <property name="jdbcUrl" value="${datasource2.db.url}"></property>
        <property name="username" value="${datasource2.db.username}"></property>
        <property name="password" value="${datasource2.db.password}"></property>
        <property name="maxWait" value="30000"></property>
        <property name="maxActive" value="50"></property>
    </bean>

    <bean name="datasource3" type="javax.sql.DataSource" class="leap.db.cp.PooledDataSource">
        <property name="driverClassName" value="${datasource3.db.driverClassName}"></property>
        <property name="jdbcUrl" value="${datasource3.db.url}"></property>
        <property name="username" value="${datasource3.db.username}"></property>
        <property name="password" value="${datasource3.db.password}"></property>
        <property name="maxWait" value="30000"></property>
        <property name="maxActive" value="50"></property>
    </bean>
    
</beans>